{% extends 'user/base.html.twig' %}
{% block stylesheets %}
        {{ parent() }}
        <link href="{{asset("css/06-components/components-user-project-header.css")}}" rel="stylesheet">
        <link href="{{asset("css/06-components/components-user/components-form.css")}}" rel="stylesheet">
{% endblock %}

{% block javascripts %}

{% endblock %}


{% block body %}
    <header class="col-12 c-user-project-header m-0  ">
        <div class="c-user-project-header__information-container">
            <div class="c-user-project-header__information-container__text">
                <div class="col-12 text-center"><h2>Позволете ни да ви помогнем</h2></div>
                <div class="col-12 text-center"><h5>Обадете се</h5></div>
            </div>
        </div>

        <div class="c-user-project-header__image-container col-12 m-0 p-0">

            <img src="{{ asset('images/contactUs.jpg') }}" class="" alt="">
        </div>
    </header>

    <div class="col-11 col-md-8 mx-auto  row">
        <div class="col-12 col-md-6 o-margin--t--2">
            <h2 class="text-center">Свържете се с нас<h3>
            <h4 class="mt-3 text-justify">Ако имате интерес към нас, се свържете с нас посредством посечения телефонен номер или формата за запитваниея.</h4>
        </div>
        <div class=" col-12  col-md-6 p-0  o-margin--t--2">
            <h2 class="text-center">Контакти</h2>
            <div class="col-12 mt-3 text-justify">
                <div class=" p-0 "><h4><i class="fas fa-map-marker-alt mr-2"></i>Център , Разград </h4></div>
                <div class=" p-0 "><h4><i class="fas fa-phone-alt mr-2"></i>089 456 5896</h4></div>
                <div class=" p-0 "><h4><i class="fas fa-envelope mr-2"></i>email@gmail.com </h4></div>
            </div>
        </div>
        <div class="col-12 o-margin--t--2">
            <div class="col-12 mx-auto text-center c-form__text"><h2>Къде да ни намерите</h2></div>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13465.624352260342!2d26.517487738911743!3d43.52767233481306!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40af0e9cf69c6a93%3A0xe77b1d05d6d26087!2z0KDQsNC30LPRgNCw0LQ!5e0!3m2!1sbg!2sbg!4v1633780604888!5m2!1sbg!2sbg" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>

        <div class="c-form col-12 mx-0 p-0 o-margin--t--2">
            {{ form_start(form) }}
            <div class="col-12 mx-auto text-center c-form__text"><h2>Свържете се с нас </h2></div>
            {{ form_widget(form.senderName, {'attr': {'class': 'c-form__input', 'placeholder' : 'Вашето име е'}}) }}
            {{ form_widget(form.senderEmail, {'attr': {'class': 'c-form__input', 'placeholder' : 'Вашият емейл е'}}) }}
            {{ form_widget(form.senderPhone, {'attr': {'class': 'c-form__input', 'placeholder' : 'Вашият телефон е'}}) }}
            {{ form_widget(form.senderMessage, {'attr': {'class': 'c-form__textarea', 'placeholder' : 'Вашето съобщение...'}}) }}


            {{ form_widget(form.save, {'attr': {'class': 'o-button c-form__send-button'}}) }}
            {{ form_end(form) }}
         </div>
        
    </div>


{% endblock %}